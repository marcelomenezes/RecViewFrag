<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_evento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_perfil_evento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.parse.starter.activity.PerfilArtistaActivity">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/imagem_evento"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/imagem_evento"
            android:id="@+id/text_nome_evento" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_nome_evento"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/text_de_data_evento_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_de_data_evento_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/text_detalhes_evento" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_detalhes_evento"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/text_endereco_evento"/>


    </RelativeLayout>


</ScrollView>
